@using SchkalkaB.Models
@model TimetableViewModel
<div class="main_main">
    <label>Здравствуйте, @Model.Teacher.TeacherName @Model.Teacher.TeacherSurName</label>
    <label>Расписание на день</label>
</div>
<div class="info">
    <img src="/basik.png">
    <div class="link_basik">
        <a asp-controller="Timetable" asp-action="Events">Мероприятия</a>
        @if (User.IsInRole("admin"))
        {
            <a asp-controller="Timetable" asp-action="Adding">Добавить</a>
        }
    </div>
</div>
<div class="basik">
    <label>Ваше расписание:</label>
    <label>@Model.DateMy.DayOfWeek</label>
    <label>@Model.DateMy.ToShortDateString()</label>
    <div class="arrows">
        <a asp-controller="Timetable" asp-action="MinusT"><img src="/arr_two.png"></a>
        <a asp-controller="Timetable" asp-action="PlusT"><img src="/arr_one.png"></a>
    </div>
</div>
<div class="super_main">
    <div class="paw_extra">
        <img src="/paw_two.png">
    </div>
    <div class="finals">
        <div class="tab">
            <div class="tab_two">
                <label class="tab_l">Смена 1</label>
            </div>
            <div class="tab_two">
                <label class="tab_l">Номер</label>
                <label class="tab_l">Урок</label>
                <label class="tab_l">Кабинет</label>
                <label class="tab_l">Класс</label>
                <label class="tab_l">Д/з</label>
                <label class="tab_l">Изменение</label>
            </div>
            @foreach(TimeTable timeTable in Model.FirstSmena)
            {
                <div class="tab_two">
                    <label class="tab_l">@timeTable.NumLesson</label>
                    <label class="tab_l">@timeTable.TeacherSubjectNavigation.SubjectNavigation.SubjectName</label>
                    <label class="tab_l">@timeTable.Cabinet</label>
                    <label class="tab_l">@timeTable.ClassNavigation.NameClass</label>
                    <label class="tab_l">@timeTable.HomeWork</label>
                </div>
                <div class="tab_two">
                    <a asp-controller="Timetable" asp-action="Homework" asp-route-timetableId="@timeTable.TimeTableId">Изменить</a>
                </div>
            }
            <div class="tab_two">
                <label class="tab_l">Смена 2</label>
            </div>
            <div class="tab_two">
                <label class="tab_l">Номер</label>
                <label class="tab_l">Урок</label>
                <label class="tab_l">Кабинет</label>
                <label class="tab_l">Класс</label>
                <label class="tab_l">Д/з</label>
                <label class="tab_l">Изменение</label>
            </div>
            @foreach (TimeTable timeTable in Model.LastSmena)
            {
                <div class="tab_two">
                    <label class="tab_l">@timeTable.NumLesson</label>
                    <label class="tab_l">@timeTable.TeacherSubjectNavigation.SubjectNavigation.SubjectName</label>
                    <label class="tab_l">@timeTable.Cabinet</label>
                    <label class="tab_l">@timeTable.ClassNavigation.NameClass</label>
                    <label class="tab_l">@timeTable.HomeWork</label>
                </div>
                <div class="tab_two">
                    <a asp-controller="Timetable" asp-action="Homework" asp-route-timetableId="@timeTable.TimeTableId">Изменить</a>
                </div>
            }
        </div>
    </div>
    <div class="paw_extra_two">
        <img src="/paw_main.png">
    </div>
</div>