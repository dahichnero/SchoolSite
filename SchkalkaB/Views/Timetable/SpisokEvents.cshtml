@using SchkalkaB.Models
@model TimetableViewModel
<div class="main_main">
    <label>Здравствуйте, директор @Model.Director.DirectorName @Model.Director.DirectorSurName</label>
    <label>Список мероприятий</label>
</div>
<div class="info">
    <img src="/basik.png">
    <div class="link_basik">
        <a asp-controller="Timetable" asp-action="AddEvent">Добавить мероприятие</a>
        <a asp-controller="Timetable" asp-action="IndexDirector">Главная</a>
    </div>
</div>
<div class="basik">
    <label>Списки мероприятий:</label>
    <label>@DateTime.Today.DayOfWeek</label>
    <label>@DateTime.Today.ToShortDateString()</label>
    <label>Мероприятия</label>
</div>
<div class="super_main">
    <div class="paw_extra">
        <img src="/paw_two.png">
    </div>
    <div class="finals">
        <div class="tab">
            <div class="tab_two">
                <label class="tab_l">Название</label>
                <label class="tab_l">Дата</label>
                <label class="tab_l">Урок</label>
                <label class="tab_l">Смена</label>
            </div>
            @foreach (Event ev in Model.Events)
            {
                <div class="tab_two">
                    <label class="tab_l">@ev.NameEvent</label>
                    <label class="tab_l">@ev.Date</label>
                    <label class="tab_l">@ev.NumLesson</label>
                    <label class="tab_l">@ev.Smena</label>
                </div>
                <div class="tab_two">
                    <a asp-controller="Timetable" asp-action="ChangeEvent" asp-route-eventId="@ev.EventId">Изменить</a>
                </div>
                <div>
                    <a asp-controller="Timetable" asp-action="DeleteEvent" asp-route-eventId="@ev.EventId">Удалить</a>
                </div>
            }
        </div>
    </div>
    <div class="paw_extra_two">
        <img src="/paw_main.png">
    </div>
</div>