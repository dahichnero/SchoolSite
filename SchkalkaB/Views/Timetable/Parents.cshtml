@using SchkalkaB.Models
@model TimetableViewModel
<div class="main_main">
    <label>Здравствуйте, <label>@Model.Student.Name</label></label>
    <label>Информация о родителях ученика</label>
</div>
<div class="info">
    <img src="/basik.png">
    <div class="link_basik">
        <a asp-controller="Timetable" asp-action="Index">Расписание на день</a>
    </div>
</div>
<div class="basik">
    <label>Родители:</label>
    <label>Класс: <label>@Model.Class.NameClass</label></label>
    <label>Нет ничего важнее семьи!</label>
</div>
<div class="super_main">
    <div class="paw_extra">
        <img src="/paw_two.png">
    </div>
    <div class="finals">
        <div class="parents">
            <label>Мать</label>
            <div class="cutie">
                <label>@Model.Mother.NameParent @Model.Mother.LastNameParent @Model.Mother.SurNameParent</label>
            </div>
        </div>
        <div class="parents">
            <label>Отец</label>
            <div class="cutie">
                <label>@Model.Father.NameParent @Model.Father.LastNameParent @Model.Father.SurNameParent</label>
            </div>
        </div>
    </div>
    <div class="paw_extra_two">
        <img src="/paw_main.png">
    </div>
</div>